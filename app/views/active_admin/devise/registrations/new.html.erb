<div id="login">
  <h2><%= title "#{active_admin_application.site_title} SignUp" %></h2>

  <%= active_admin_form_for(resource, :as => resource_name, :url => registration_path("#{resource_name}_user"), :html => { :method => :post }) do |f| 
    f.inputs do
      f.input :email
      f.input :password
      f.input :password_confirmation
    end
    f.buttons do
      f.commit_button "SignUp"
    end
  end
  %>

  <%= render :partial => "devise/shared/links" %>
</div>